<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.hunter.cookies"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name="com.hunter.cookies.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.hunter.cookies.utils.glide.DribbbleGlideModule"
            android:value="DribbbleGlideModule"/>

        <activity
            android:name="com.hunter.cookies.ui.main.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MainActivityCustomTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.hunter.cookies.ui.user.login.LoginActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.hunter.cookies.ui.user.login.AuthorizeActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.hunter.cookies.ui.shots.detail.ShotsDetailActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.hunter.cookies.ui.profile.ProfileActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.hunter.cookies.ui.shots.ImageWatcherActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.hunter.cookies.ui.user.search.SearchActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.hunter.cookies.ui.settings.SettingsActivity">
        </activity>

        <receiver
            android:name="com.hunter.cookies.broadcast.NetworkChangeReceiver"
            android:label="NetworkConnection">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE"/>
            </intent-filter>
        </receiver>

    </application>

</manifest>