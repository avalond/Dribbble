<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="12dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/drawee_item_follower_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:placeholderImage="@drawable/shape_corner_grey"
        app:roundBottomLeft="true"
        app:roundBottomRight="true"
        app:roundTopLeft="true"
        app:roundTopRight="true"
        app:roundedCornerRadius="8dp"/>

    <RelativeLayout
        android:id="@+id/ll_item_comments_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_follower_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_blue"
            tools:text="Cuberto Cuberto"/>

        <TextView
            android:id="@+id/tv_item_follower_shots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_follower_user_name"
            android:layout_marginTop="4dp"
            android:textColor="@color/text_grey"
            android:textSize="12sp"
            tools:text="15 作品"/>

        <TextView
            android:id="@+id/tv_item_follower_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_follower_user_name"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/tv_item_follower_shots"
            android:drawableLeft="@drawable/iv_location_grey_12dp"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:textColor="@color/text_grey"
            android:textSize="12sp"
            tools:text="China"/>
    </RelativeLayout>

</LinearLayout>