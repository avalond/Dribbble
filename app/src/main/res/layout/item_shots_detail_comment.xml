<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:padding="12dp">

    <ImageView
        android:id="@+id/iv_item_comments_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        tools:background="@drawable/shape_corner_grey"/>

    <LinearLayout
        android:id="@+id/ll_item_comments_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_toRightOf="@id/iv_item_comments_avatar"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_comments_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_blue"
            android:textStyle="bold"
            tools:text="Cuberto Cuberto"/>

        <TextView
            android:id="@+id/tv_item_comments_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_grey"
            android:textSize="12sp"
            tools:text="昨天"/>

        <TextView
            android:id="@+id/tv_item_comments_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/text_black"
            tools:text="Cuberto Cuberto"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_item_comments_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:drawableLeft="@drawable/iv_like_grey_16dp"
        android:drawablePadding="2dp"
        android:text="12"
        android:textColor="@color/text_grey"/>
</RelativeLayout>