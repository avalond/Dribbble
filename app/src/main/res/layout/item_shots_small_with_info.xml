<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/drawee_item_shots_preview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:transitionName="@string/transition"
                app:actualImageScaleType="centerCrop"
                app:placeholderImage="@drawable/shape_grey"
                app:placeholderImageScaleType="centerCrop"
                app:viewAspectRatio="1.33"
                tools:targetApi="lollipop"/>

            <ImageView
                android:id="@+id/iv_item_shots_gif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="4dp"
                android:background="@mipmap/ic_gif_small"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item_shots_options_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="6dp">

            <TextView
                android:id="@+id/tv_item_shots_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/iv_like_grey_16dp"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:textColor="@color/text_black"
                android:textSize="13sp"
                tools:text="1234"/>

            <TextView
                android:id="@+id/tv_item_shots_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/iv_comment_grey_16dp"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:textColor="@color/text_black"
                android:textSize="13sp"
                tools:text="1234"/>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>